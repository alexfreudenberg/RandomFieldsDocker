{
  "name": "RandomFieldsDocker",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": { 
    }
  },

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  "features": {
  },

  "customizations": {
		"vscode": {
			"extensions": [
				"REditorSupport.r"
			],
			"settings": {
				"[r]": {
					"editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
				}
			}
		},
    "codespaces": {
      "openFiles": [
        ".devcontainer/onLaunch.R"
      ]
    }
  }
}
